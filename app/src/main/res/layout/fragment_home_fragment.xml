<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#A2C7CC"
    android:id="@+id/homelaypout"
    android:orientation="vertical"
    tools:context=".home_fragment">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/gogte_image"
        android:contentDescription="our collage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="KLS GOGTE INSTITUTE OF TECHNOLOGY\n"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="italic"
        android:textSize="20sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/gogteinformation"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="VISION"
                android:textStyle="bold"
               android:layout_marginStart="120dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vision"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="MISSION"
                android:textStyle="bold"
                android:layout_marginStart="120dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vision"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Visit Us On:"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                 <com.airbnb.lottie.LottieAnimationView
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     app:lottie_rawRes="@raw/googleanim"
                     android:id="@+id/google_anim"
                     app:lottie_autoPlay="true"
                     android:overScrollMode="ifContentScrolls"
                     android:layout_marginStart="20dp"
                     app:lottie_loop="true"/>
                  <com.airbnb.lottie.LottieAnimationView
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      app:lottie_rawRes="@raw/instaanium"
                      app:lottie_autoPlay="true"
                      app:lottie_loop="true"
                      android:layout_marginStart="70dp"
                      android:id="@+id/insta"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:lottie_rawRes="@raw/facebookanim"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_marginStart="70dp"
                    android:id="@+id/facebook"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>